#!/bin/bash
###################################################
# Filename: run.sh
# Author: shing
# Email: www.asm.best
# Created: 2021年02月19日 星期五 18时14分21秒
###################################################
##set -xe

function do_help()
{
    echo  "Usage:"
    echo  "    run.sh  [compile] [debug|release]"

    return  0
}

function do_compile()
{
    cd $(dirname $0)
    if [ ! -d build ]; then
        mkdir build
    fi
    cd ./build

    ## 允许系统生成core文件
    ulimit -c unlimited

    #   确定与构建模式相关的参数
    if   [[ "$2" == "debug" ]] || [[ "$2" == "" ]]; then
        cmake -DCMAKE_BUILD_TYPE=Debug ..
    elif [[ "$2" == "release" ]]; then
        cmake -DCMAKE_BUILD_TYPE=Release ..
    else
        echo "Error: Unsupported compile mode '$2'"
        return 1
    fi

    make clean  ##取消make clean可以加快编译速度

    if [ -f core ]; then
        ## 备份之前系统生成的core文件
		mv core $(date +%Y-%m-%d_%H:%M:%S)core
    fi

    ## 4线程编译代码
    make -j4

    ../bin/main

    return 0
}

function main()
{
    local action="$1"

    if [[ "${action}" == "help" ]] || [[ "${action}" == "--help" ]] || [[ "${action}" == "-h" ]]; then
        do_help     "$@"
        return      "$?"
    fi

    if [[ "${action}" == "debug" ]] || [[ "${action}" == "release" ]] || [[ "${action}" == "" ]]; then
        do_compile  "compile" "$@"
        return      "$?"
    fi

    if [[ "${action}" == "compile" ]]; then
        do_compile  "$@"
        return      "$?"
    fi

    echo  "Unsupported action '${action}', type 'help' for help"
    return  $?
}

main  "$@"
exit  "$?"